<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InvasiveSpeciesWatchActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingTop="40dp"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invasive_species_watch_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you observe any invasive species?"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/invasive_species_radio_group"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_watch_label"
            app:layout_constraintStart_toStartOf="@+id/invasive_species_watch_label">

            <RadioButton
                android:id="@+id/invasive_species_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Invasive Species 1"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="27dp" />
            <ImageView
                android:id="@+id/invasive_species_image_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <RadioButton
                android:id="@+id/invasive_species_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Invasive Species 2"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="27dp" />

            <ImageView
                android:id="@+id/invasive_species_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <RadioButton
                android:id="@+id/invasive_species_3"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="Invasive Species 3"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="27dp" />
            <ImageView
                android:id="@+id/invasive_species_image_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <RadioButton
                android:id="@+id/invasive_species_4"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="Invasive Species 4"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="27dp" />
            <ImageView
                android:id="@+id/invasive_species_image_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <RadioButton
                android:id="@+id/invasive_species_5"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="Other"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="27dp" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:id="@+id/invasive_species_other_label"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_radio_group"
            app:layout_constraintStart_toStartOf="@+id/invasive_species_radio_group"
            android:textColor="@color/colorBlack"
            android:text="Please upload picture of the plant"
            android:layout_marginStart="32dp"/>
        <Button
            android:id="@+id/button_invasive_species_upload"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_other_label"
            app:layout_constraintStart_toStartOf="@+id/invasive_species_radio_group"
            android:background="@drawable/small_button_corners"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            android:layout_gravity="left"
            android:paddingHorizontal="8dp"
            android:text="Upload picture"
            android:textColor="@color/colorBlue"
            android:textSize="12dp"
            app:rippleColor="@color/colorBlue" />
        <ImageView
            android:layout_width="350dp"
            app:layout_constraintTop_toBottomOf="@+id/button_invasive_species_upload"
            app:layout_constraintStart_toStartOf="@+id/invasive_species_radio_group"
            android:layout_height="350dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sample_invasive_species_image_view"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:id="@+id/invasive_species_spread_label"
            app:layout_constraintTop_toBottomOf="@+id/sample_invasive_species_image_view"
            app:layout_constraintStart_toStartOf="@+id/invasive_species_radio_group"
            android:text="How widespread is it in percentage(%)?"/>

        <SeekBar
            android:id="@+id/invasive_species_spread_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_spread_label" />

        <Button
            android:id="@+id/button_invasive_species"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_spread_bar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background = "@drawable/rounded_corners"
            android:elevation="10dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textColor="#ffffff"
            app:rippleColor="@color/colorBlue" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>