<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LakeHealthActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingTop="40dp"
        android:paddingBottom="100dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:fontFamily="@font/nunito"
            android:text="Do you see any dead fish nearby? Tell us more."/>
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/edit_text_lake_health_dead_fish"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/nunito"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:text="@string/lake_health_question_two"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group_lake_health">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_1"
                android:textSize="18sp"
                android:fontFamily="@font/nunito"
                android:text="Transparent(bottom visible)"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_2"
                android:textSize="18sp"
                android:fontFamily="@font/nunito"
                android:text="Blue lake water"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_3"
                android:textSize="18sp"
                android:fontFamily="@font/nunito"
                android:text="Green lake water"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_4"
                android:textSize="18sp"
                android:fontFamily="@font/nunito"
                android:text="Brown lake water"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_5"
                android:textSize="18sp"
                android:fontFamily="@font/nunito"
                android:text="Other"/>
        </RadioGroup>
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:visibility="gone"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/edit_text_lake_health_other"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/nunito"
            android:textSize="22sp"
            android:text="@string/lake_health_question_three"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:text="Solid waste dumping"
            android:id="@+id/lake_health_checkbox_1"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/lake_health_checkbox_2"
            android:layout_height="wrap_content"
            android:text="Illegal encroachment"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/lake_health_checkbox_3"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:text="Dirty water entering waterbody"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/lake_health_checkbox_4"
            android:text="Dead animal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="32dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/dead_animal_description_label"
            android:text="Can you tell us more about the dead animal affecting the lake?"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            android:id="@+id/edit_text_dead_animal_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="32dp"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/dead_animal_image_label"
            android:text="Can you upload the dead animal image affecting the lake?"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_dead_animal_upload"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/invasive_species_other_label"
            app:layout_constraintStart_toStartOf="@+id/animal_ar_radio_group"
            android:background="@drawable/small_button_corners"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:elevation="10dp"
            android:fontFamily="@font/lato"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_gravity="left"
            android:backgroundTint="#FFDE8F"
            android:paddingHorizontal="20dp"
            android:text="Upload picture(Optional)"
            android:textColor="#A5633B"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sample_image_view"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:id="@+id/lake_health_checkbox_5"
            android:layout_height="wrap_content"
            android:text="Other"/>
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="32dp"
            android:id="@+id/edit_text_other_lake_health"
            android:visibility="gone"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_lake_health"
            android:layout_marginTop="30dp"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background = "@drawable/large_button_citizen_science_style"
            android:elevation="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:text="Submit"
            android:textColor="#fafafa"/>
        <Button
            android:id="@+id/button_lake_health_cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/large_button_light_citizen_science"
            android:elevation="20dp"
            android:fontFamily="@font/lato"
            android:text="Cancel"
            android:backgroundTint="#FFDE8F"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#A5633B"
            android:textSize="18sp"
             />
    </LinearLayout>

</ScrollView>