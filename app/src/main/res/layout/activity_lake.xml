<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".LakeActivity"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/about_us_style"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="270dp"
        android:id="@+id/content_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_weight="8"
        android:background="#fafafa"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:background="#fafafa"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deepor Beel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito"
            android:background="#fafafa"
            android:paddingVertical="32dp"
            android:textSize="22sp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="About:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/description"
            android:fontFamily="@font/nunito"
            android:textColor="@color/colorBlack"
            android:text="In the southwestern part of Guwahati city lies Deepor Beel, the only Ramsar site of Assam.The name is derived from dipa and beel which loosely translates to a wetland inhabited by the elephants. The water from  Basistha and Kalamoni rivers feed the wetland.  As a natural storm water reservoir it acts as a buffer to Guwahati cityâ€™s flooding problem."/>
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Lake Threats:"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:scaleType="fitXY"
            android:src="@drawable/threats" />
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <TextView
             android:layout_width="match_parent"
             android:textSize="18sp"
             android:fontFamily="@font/nunito_sans_light_italic"
             android:textColor="@color/colorBlack"
             android:layout_marginBottom="10dp"
             android:textAlignment="center"
             android:layout_height="wrap_content"
             android:text='"The beel makes you happy and gives so many services. Please be responsible and look after it ."'/>
         <Button
             android:id="@+id/button_back_about"
             style="?attr/materialButtonOutlinedStyle"
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             app:layout_constraintTop_toBottomOf="@+id/invasive_species_other_label"
             app:layout_constraintStart_toStartOf="@+id/animal_ar_radio_group"
             android:textAppearance="@style/TextAppearance.AppCompat.Body2"
             android:background="@drawable/small_button_corners_dark"
             android:elevation="10dp"
             android:fontFamily="@font/lato"
             android:layout_marginTop="10dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="#D42211"
             android:paddingHorizontal="40dp"
             android:text="Back"
             android:textColor="#fafafa"
             android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>